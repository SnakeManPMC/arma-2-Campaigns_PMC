;
; get people out
;
helo land "land";

#landing
~.5

_z = getpos vehicle helo select 2;

;
; loop until helo height is 2 meters.
;
?(_z > 2): goto "landing"

helo flyinheight 0;

;
; wait until whole squad is on board.
;
_A = 0;
ejc="EJECT";

#WAITING
_listunits = units assault1;
_B = count _listunits
~.2
;?(_listunits select _A in helo): _A=_A+1
_listunits select _A action [ejc,helo];
_A=_A+1
?(_B > _A): goto "WAITING"


helo flyinheight 50;

exit
